STM_CUBE_FW_DIR=/home/pc/STM32Cube/Repository/STM32Cube_FW_F7_V1.11.0
FREE_RTOS_DIRECTORY=$(STM_CUBE_FW_DIR)/Middlewares/Third_Party/FreeRTOS
PORT_MACRO_H_DIRECTORY=$(STM_CUBE_FW_DIR)/Middlewares/Third_Party/FreeRTOS/Source/portable/GCC/ARM_CM4F/r0p1
CMSIS_DIRECTORY=$(STM_CUBE_FW_DIR)/Drivers/CMSIS/Include/
FREE_RTOS_CONFIG_DIRECTORY=


ARCHITECTURE_BM_L0Types_DIR=$(ROOT_DIR)/Core/BareMetal/L0Types/Architecture
ARCHITECTURE_BM_L1Portability_DIR=$(ROOT_DIR)/Core/BareMetal/L1Portability/Architecture
ENVIRONMENT_BM_L1Portability_DIR=$(ROOT_DIR)/Core/BareMetal/L1Portability/Environment
ENVIRONMENT_BM_L6App_DIR=$(ROOT_DIR)/Core/BareMetal/L6App/Environment
ENVIRONMENT_FS_L1Portability_DIR=$(ROOT_DIR)/Core/FileSystem/L1Portability/Environment
ENVIRONMENT_SC_L1Portability_DIR=$(ROOT_DIR)/Core/Scheduler/L1Portability/Environment

BUILD_DIR=$(ROOT_DIR)/Build/$(TARGET)/$(PACKAGE)/$(lastword $(subst /,\ ,$(CURDIR)))

TARGET_PARENT=gcc
ENVIRONMENT=FreeRTOS
ARCHITECTURE=arm_cort_m4_stm
EXEEXT=.bin
DLLEXT=.so
LIBEXT=.a
OBJEXT=.o
ASMEXT=.s
DRVEXT=.drv
GAMEXT=.gam
GCNOEXT=.gcno
GCDAEXT=.gcda
GCOVEXT=.gcov
HEXEXT=.hex
LSTEXT=.lst
SYMEXT=.sym
ELFEXT=.elf

OBJS=   $(OBJSX:%.x=$(BUILD_DIR)/%.o) 

SUBPROJ = $(SPB:%.x=%.spb)
SUBPROJT = $(SPBT:%.x=%.spb)
SUBPROJGT = $(SPBGT:%.x=%.spb)
SUBPROJC = $(SPB:%.x=%.spc)

CROSS_COMPILER = arm-none-eabi
COMPILER = $(CROSS_COMPILER)-g++
CCOMPILER = $(CROSS_COMPILER)-gcc
LINKER = $(CROSS_COMPILER)-ld
OBJCOPY = $(CROSS_COMPILER)-objcopy
OBJDUMP = $(CROSS_COMPILER)-objdump
NM = $(COMPILER_BASE)-nm
MAKE     = make

DEBUG = -g 
OPTIM = -Os

ARM_INCLUDES=-I$(FREE_RTOS_DIRECTORY)/Source/include -I$(PORT_MACRO_H_DIRECTORY) -I$(FREE_RTOS_CONFIG_DIRECTORY) -I$(CMSIS_DIRECTORY) -I/usr/include/c++/4.8 -I/usr/include/newlib/c++/4.9/arm-none-eabi/armv7-m/
ARM_CFLAGS= -mcpu=cortex-m7 -mfpu=fpv5-sp-d16 -mfloat-abi=softfp -mlittle-endian -mthumb -mthumb-interwork -ffunction-sections -fdata-sections  
ARM_LFLAGS= -mcpu=cortex-m7 -mfpu=fpv5-sp-d16 -mfloat-abi=softfp -mthumb -falign-functions=16 -lm -lgcc -lc -lnosys -specs=nosys.specs -Wl,--gc-section -g

INCLUDES=$(ARM_INCLUDES)


CFLAGS = -MD -MP -g -Wall $(ARM_CFLAGS)
LFLAGS =  $(ARM_LFLAGS)

CPPFLAGS = $(CFLAGS) 

ifndef ARCHITECTURE_BM_L0Types_DIR
	 ARCHITECTURE_BM_L0Types_DIR = Architecture
endif
ifndef ARCHITECTURE_BM_L1Portability_DIR
	 ARCHITECTURE_BM_L1Portability_DIR = Architecture
endif
ifndef ENVIRONMENT_BM_L1Portability_DIR
	 ENVIRONMENT_BM_L1Portability_DIR = Environment
endif
ifndef ENVIRONMENT_BM_L6App_DIR
	 ENVIRONMENT_BM_L6App_DIR = Environment
endif
ifndef ENVIRONMENT_FS_L1Portability_DIR
	 ENVIRONMENT_FS_L1Portability_DIR = Environment
endif
ifndef ENVIRONMENT_FS_L6App_DIR
	 ENVIRONMENT_FS_L6App_DIR = Environment
endif
ifndef ENVIRONMENT_SC_L1Portability_DIR
	 ENVIRONMENT_SC_L1Portability_DIR = Environment
endif

CFLAGSPEC= -DARCHITECTURE=$(ARCHITECTURE) -DENVIRONMENT=$(ENVIRONMENT) $(SPEC_DEFS) -D_ARCHITECTURE_BM_L0Types_DIR=$(ARCHITECTURE_BM_L0Types_DIR) -D_MARTe2_DIR=$(MARTe2_DIR)\
	-D_ARCHITECTURE_BM_L1Portability_DIR=$(ARCHITECTURE_BM_L1Portability_DIR)\
	-D_ENVIRONMENT_BM_L1Portability_DIR=$(ENVIRONMENT_BM_L1Portability_DIR)\
	-D_ENVIRONMENT_BM_L6App_DIR=$(ENVIRONMENT_BM_L6App_DIR)\
	-D_ENVIRONMENT_FS_L1Portability_DIR=$(ENVIRONMENT_FS_L1Portability_DIR)\
	-D_ENVIRONMENT_FS_L6App_DIR=$(ENVIRONMENT_FS_L6App_DIR)\
	-D_ENVIRONMENT_FS_L6App_DIR=$(ENVIRONMENT_FS_L6App_DIR)\
	-D_ENVIRONMENT_SC_L1Portability_DIR=$(ENVIRONMENT_SC_L1Portability_DIR)
  
.SUFFIXES:   .c  .cpp  .o .a .exe .ex .ex_ .so .gam


